---
import '@/styles/globals.css';
import '@fontsource-variable/onest';
import '@fontsource-variable/inter';
import Header from "@components/Header.astro";
import Flame from "@/icons/flame.svg?raw";
import { Icon } from 'astro-icon/components'

const { title  } = Astro.props

const pageTitle = title ?? 'Códigos postales de México - with ❤️ by Nitrostudio'
---
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />
	<title>{pageTitle}</title>
</head>
<body>
<div class="fixed left-0 top-0 -z-10 h-full w-full">
	<div class="dark:hidden block absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]"></div>
	<div class="dark:block hidden absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
</div>
<Header />
<main class="block p-6 md:p-0">
	<slot />
</main>
<footer class="container mx-auto max-w-[1280px] sm:px-[20px] md:px-[20px] my-6 flex justify-center items-center gap-1 text-sm">
	Hecho con ❤️ por <a href="https://github.com/Mxrck" target="_blank">Marco Maldonado </a> <Icon name="flame" class="inline-block -mt-1 w-4 h-4" />
</footer>
<script is:inline>
	if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
		document.documentElement.classList.add('dark')
	} else {
		document.documentElement.classList.remove('dark')
	}
</script>
</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	body {
		font-family: 'Onest Variable', system-ui, sans-serif;
		background-color: white;
		color: black;
	}
	html.dark body {
		background-color: black;
		@apply text-gray-100;
	}
	@media screen and (prefers-color-scheme: light) {
		body {
			background-color: #fafafa;
			color: black;
		}
	}
	pre > code > pre {
		background-color: transparent !important;
	}
	.code-block > div {
		padding: 10px;
		border-radius: 10px;
		overflow-y: hidden;
		overflow-x: auto;
	}
</style>